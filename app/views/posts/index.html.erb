<% if flash[:notice] %>
  <p class="success"><%= flash[:notice] %></p>
<% end %>

<div class="booksmain">
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
</tr>
</thead>

<% @posts.each do |post| %>
<tbody>
<tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>

     <p> <%= link_to "Show", post_path(post),class: "show_#{post.id}" %> </p>

        </td>
        <td>
        <p> <%= link_to "Edit", edit_post_path(post), class: "edit_#{post.id}" %> </p>
        </td>
        <td>
        <%= link_to "Destroy", post_path(post),method: :delete,class: "destroy_#{post.id}"  %>
        </td>
      </tr>

      </tbody>
      <% end %>
  </table>

  <h2>New book</h2>

<% if @post.errors.any? %>
<p class="error"> error </p>
<% end %>

<%= form_for(@post) do |f| %>
<div class="field">
<p class="indextitle">Title</p>
<%= f.text_field :title %>
</div>
<div class="field">

<p class="indexbody">Body</p>

<%= f.text_area :body %>
</div>
<%= f.submit 'Create Book' %>
<% if @post.errors.any? %>
<% end %>

<% end %>

</div>